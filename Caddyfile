{
    email ${EMAIL}
    acme_ca https://acme-v02.api.letsencrypt.org/directory
}

*.${DOMAIN} {
    tls {
        dns duckdns ${DUCKDNS_TOKEN}
    }
    reverse_proxy {{upstream}} {
        header_up Host {host}
    }
}

